extends ./layout.jade
block contenido
  form(action="/users",method="POST")
    div(class="form-group")
      label(for="email") Email
      input(type="text",name="email",placeholder="Tu E-mail",id="email",class="form-control")
    div(class="form-group")
      label(for="password") Contraseña
      input(type="password",name="password",placeholder="Contraseña",id="password",class="form-control")
    div(class="form-group")
      label(for="password_confirmation") Confirma tu contraseña
      input(type="password",name="password_confirmation",placeholder="Confirmar contraseña",id="password_confirmation",class="form-control")
    div
      input(type="submit",class="btn btn-warning",value="Iniciar Sesión")
